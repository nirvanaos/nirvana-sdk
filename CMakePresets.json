{
  "version": 7,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 7
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "inherits": "base",
      "name": "msvs",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "inherits": "base",
      "name": "ninja",
      "hidden": true,
      "generator": "Ninja Multi-Config",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "inherits": "msvs",
      "name": "win-x64",
      "displayName": "Windows x64",
      "architecture": "x64",
      "cacheVariables": {
        "CMAKE_GENERATOR_PLATFORM": "x64"
      }
    },
    {
      "inherits": "msvs",
      "name": "win-x86",
      "displayName": "Windows x86",
      "architecture": "Win32",
      "cacheVariables": {
        "CMAKE_GENERATOR_PLATFORM": "Win32"
      }
    },
    {
      "inherits": "ninja",
      "name": "gc",
      "displayName": "GNU C",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "g++"
      }
    },
    {
      "inherits": "ninja",
      "name": "clang",
      "displayName": "CLang",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "clang++"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "win-x64-debug",
      "displayName": "Windows x64 Debug",
      "configurePreset": "win-x64",
      "configuration": "Debug"
    },
    {
      "name": "win-x64-release",
      "displayName": "Windows x64 Release",
      "configurePreset": "win-x64",
      "configuration": "Release"
    }
  ]
}
